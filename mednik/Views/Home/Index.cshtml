@using mednik.Controllers
@model IEnumerable<Post>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Разборы</title>
</head>
<body>

<div class="container">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <div class="row" style="margin-bottom: 50px">
            <div class="col"></div>
            <div class="col-xs-2 col-sm-2">
                <a class="btn btn-primary" asp-controller="Posts" asp-action="Index">Добавить +</a>
            </div>
        </div>
    }

    <section class="posts row">
        @foreach (Post post in Model)
        {
            <div class="col-xs-6 col-md-6 col-lg-4">
                <div class="card post" style="background-color: #253D66">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <form asp-controller="Posts" asp-action="Delete" method="post">
                            <input type="hidden" name="Id" value="@post.Id"/>
                            <button type="submit" style="background: transparent; border: none">
                                <i class="bi bi-trash text-white"></i>
                            </button>
                        </form>
                    }
                    <embed src="@Url.Action("Render", "Posts", new { imgUrl = post.ImageURL })" class="card-img-top" style="width: 100%; height: 200px">
                    <div class="card-body">
                        <h5 class="card-title text-white">@post.Name</h5>
                        <p class="card-text text-white">@post.Description</p>
                        <a href="#" class="btn btn-primary">Открыть</a>
                    </div>
                </div>
            </div>
        }
    </section>
</div>
</body>
</html>