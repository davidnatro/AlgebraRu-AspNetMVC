@model Services

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <link rel="stylesheet" href="~/login.css"/>
    <title>Services</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col login">
            <form class="box" asp-controller="Services" asp-action="AddService" method="post">
                <h1></h1>
                <div class="row text-white" asp-validation-summary="ModelOnly"></div>
                <input type="text" placeholder="Название" name="name">
                <input type="text" placeholder="Ссылка" name="link">
                <input type="submit" value="Добавить">
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
</body>
</html>