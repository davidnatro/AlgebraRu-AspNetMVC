<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial_scale=1.0">
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="main.css">
    <link rel="icon" type="image/png" sizes="180x180" href="Icon.png"/>
</head>
<body>
<header class="header navigation">
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand logo text-white" asp-controller="Home" asp-action="Index">Math <i class="bi bi-mortarboard-fill"></i></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavig" aria-controls="navbarNavig" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="padding: 5px"><i class="bi bi-bounding-box-circles text-white"></i></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavig">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" id="navbarDropdownHSE" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false" asp-controller="HSE" asp-action="Index">ВШЭ <i class="bi bi-book"></i></a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownHSE">
                            <li><a class="dropdown-item text-white" target="_blank" href="#">Алгебра</a></li>
                            <li><a class="dropdown-item text-white" target="_blank" href="#">Дискретная математика</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white"
                           id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                           href="#">Сервисы <i class="bi bi-calculator"></i>
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item text-white" href="https://matrixcalc.org/" target="_blank">Матричный калькулятор</a></li>
                            <li>
                                <a class="dropdown-item text-white" href="http://timbaumann.info/svd-image-compression-demo/" target="_blank">
                                    Сингулярное разложение(SVD)
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Разборы <i class="bi bi-archive-fill"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Contacts" asp-action="Index">Контакты <i class="bi bi-info-circle-fill"></i></a>
                    </li>
                    <li class="nav-item justify-content-end">
                        <a class="nav-link text-white" asp-controller="Login" asp-action="Index">Login <i class="bi bi-code-slash"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="hor_line"></div>

@RenderBody()


@{ string pop = "@popperjs"; }
<script src="/node_modules/@pop/core/dist/umd/popper.js"></script>
<script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>