@model PostDTO

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/login.css"/>
    <title>Add Post</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col login">
            <form class="box" asp-controller="Posts" asp-action="Save" method="post" enctype="multipart/form-data">
                <div class="row text-white" asp-validation-summary="ModelOnly"></div>
                <input type="text" placeholder="Название" name="Name">
                <input type="text" placeholder="Описание" name="Description">
                <input type="file" class="text-white" name="FileData" accept="application/pdf"/>
                <input type="submit" value="Сохранить">
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
</body>
</html>